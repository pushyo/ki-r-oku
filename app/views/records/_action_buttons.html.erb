<div class="action-buttons">
  <% if signed_in? %>
    <%= button_to "View", record, :method => 'get', :class => "view-button" %>
    <% if [params[:controller], params[:action]] == [ "records", "index"] %>
      <%= button_to "Edit", edit_record_path(record), :method => 'get', :class => "edit-button" %>
      <%= button_to "Delete", record, :method => 'delete', 
                                      :confirm => "are you sure?",
                                      :class => "delete-button" %>
    <% end %>
  <% end %>
</div>
