    <div class="record-item">
      <div class="wrapper">
        <div class="record-title">
          <%= record.title %>
        </div>
        <div class="record-info">
          Started <%= record_start_time(record) %>
            <%= record_owner_display(record) %>
            <%= render 'records/action_buttons', :record => record %>
        </div>
        <div class="record-tags"><% "#TODO" %></div>
        <div class="record-head">
          <%= record_content_head(record) %>
        </div>
      </div>
      <div class="clear"></div>
    </div>
    
