<%= form_for @record do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<div>
  <%= f.label :content, "Please start writing !" %><br/>
  <%= f.text_area :content, :rows => 10 %>
</div>
<div>
  <%= f.label :title, "title" %>
  <%= f.text_field :title %>
</div>
<div>
  <%= f.submit "record" %>
</div>
<% end %>
